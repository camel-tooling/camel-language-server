	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.release>17</maven.compiler.release>
		<jacoco.version>0.8.12</jacoco.version>
		<lsp4j.version>0.22.0</lsp4j.version>
